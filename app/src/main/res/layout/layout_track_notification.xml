<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel_notification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_margin="@dimen/dimen_size_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

        <TextView

                android:id="@+id/txt_track_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/text_size_18"
                android:text="Track title"
                android:textStyle="bold"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:ellipsize="end"
                android:lines="1"/>

        <TextView
                android:id="@+id/notification_text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:text="Author Name"
                android:textStyle="italic"
                android:ellipsize="end"/>

    </LinearLayout>


    <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/img_playback"
            android:layout_toLeftOf="@+id/img_close"
            android:layout_toStartOf="@+id/img_close"
            android:src="@android:drawable/ic_media_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:padding="@dimen/dimen_size_5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/img_close"
            android:layout_width="24dp"
            android:clickable="true"
            android:layout_height="24dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:src="@android:drawable/ic_menu_close_clear_cancel" android:focusable="true"/>


</RelativeLayout>