<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_size_10">

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:layout_marginRight="@dimen/dimen_size_10" />


    <TextView
        android:id="@+id/txt_music_title"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_thumb"
        android:layout_toRightOf="@+id/img_thumb"
        android:text="Hawa Hawa .... "
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/txt_music_author"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_music_title"
        android:layout_toEndOf="@+id/img_thumb"
        android:layout_toRightOf="@+id/img_thumb"
        android:text="Kourosh Yaghmei"
        android:textStyle="italic" />
</RelativeLayout>